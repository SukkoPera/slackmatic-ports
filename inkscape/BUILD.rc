. ../sukkolib.rc

BRIEF='A professional vector graphics editor'
PROJECT=https://inkscape.org
RELEASE=0.92.4
BUILD=1suk_$SLCKVER
PACKAGER=slackware@sukkology.net
BUILDSYSTEM=autotools

SOURCE=(
	https://inkscape.org/gallery/item/13330/inkscape-0.92.4_A6N0YOn.tar.bz2
)

# Why do we have to set this manually???
CXXFLAGS='-Wall -O2 -std=c++11'

CONFOPTS=(
	$DEFAULT_CONFOPTS
	--enable-dbusapi
)

fn configure {
	./autogen.sh
	std_configure
}
