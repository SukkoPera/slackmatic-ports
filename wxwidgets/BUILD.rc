. ../sukkolib.rc

BRIEF='Cross-platform GUI library'
PROJECT=http://www.wxwidgets.org
RELEASE=3.0.1
BUILD=1suk_$SLCKVER
PACKAGER=slackware@sukkology.net
BUILDDIR=wxWidgets-$RELEASE

SOURCE=(
	$SF/wxwindows/$RELEASE/wxWidgets-$RELEASE.tar.bz2
)

CONFOPTS=(
	$DEFAULT_CONFOPTS
	--enable-no_deps
	--enable-compat26
	--with-sdl 
	--with-opengl
	--enable-stl
	--enable-unicode
	--disable-universal
)

DOCS=(
	$DEFAULT_DOCS
	*.txt
)
