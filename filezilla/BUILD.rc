. ../sukkolib.rc

BRIEF='The free FTP solution'
PROJECT=http://filezilla-project.org
RELEASE=3.3.4.1
BUILD=1suk_$SLCKVER
PACKAGER=slackware@sukkology.net

SOURCE=(
	$SF/$NAME/'FileZilla_'$RELEASE'_src.tar.bz2'
)

CONFOPTS=(
	$DEFAULT_CONFOPTS
	--with-tinyxml'='builtin
)

fn configure {
	mkdir BUILD
	cd BUILD
	../configure $CONFOPTS
}

fn docinst {
	cd ..
	std_docinst
}
