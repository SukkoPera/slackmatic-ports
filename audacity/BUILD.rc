. ../sukkolib.rc

BRIEF='A free audio editor'
PROJECT=http://audacityteam.org
RELEASE=2.1.2
BUILD=1suk_$SLCKVER
PACKAGER=slackware@sukkology.net
BUILDDIR=$NAME-minsrc-$RELEASE

SOURCE=(
	http://www.fosshub.com/Audacity.html/$NAME-minsrc-$RELEASE.tar.xz
)

# Autodetection of libraries seems working great, so let's rely on it!
CONFOPTS=(
	$DEFAULT_CONFOPTS
	--with-wx-version'='3.0
)

fn docinst {
	std_docinst

	mv $PKG/usr/share/doc/audacity/* $DOC
	rm -rf $PKG/usr/share/doc
}
